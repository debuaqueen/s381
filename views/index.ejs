<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Welcome, <%= username %>!</h1>
      <a href="/logout" class="btn btn-outline-danger">Logout</a>
    </div>

    <a href="/students/new" class="btn btn-success mb-3">Create New Student</a>

    <!-- Search Form -->
    <form action="/students" method="get" class="row g-2 mb-4">
      <div class="col-md-3">
        <input type="text" name="name" placeholder="Name (partial)" value="<%= query.name || '' %>" class="form-control">
      </div>
      <div class="col-md-3">
        <input type="text" name="major" placeholder="Major (partial)" value="<%= query.major || '' %>" class="form-control">
      </div>
      <div class="col-md-2">
        <input type="number" name="minAge" placeholder="Min Age" value="<%= query.minAge || '' %>" class="form-control">
      </div>
      <div class="col-md-2">
        <input type="number" name="maxAge" placeholder="Max Age" value="<%= query.maxAge || '' %>" class="form-control">
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Search</button>
      </div>
    </form>

    <table class="table table-hover table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Student ID</th>
          <th>Age</th>
          <th>Major</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(s => { %>
          <tr>
            <td><%= s.name %></td>
            <td><%= s.studentId %></td>
            <td><%= s.age %></td>
            <td><%= s.major %></td>
            <td>
              <a href="/students/<%= s._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
              <form action="/students/<%= s._id %>?_method=DELETE" method="POST" style="display:inline;" 
                    onsubmit="return confirm('Delete <%= s.name %> forever?');">
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <% if (students.length === 0) { %>
      <p class="text-muted">No students found. Create one!</p>
    <% } %>
  </div>
</body>
</html>