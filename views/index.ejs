<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Student Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .welcome-text {
      font-size: 2.3rem;
      font-weight: 800;
      background: linear-gradient(90deg, #ff9a9e 0%, #fad0c4 99%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
    .card-main {
      border-radius: 24px;
      overflow: hidden;
      box-shadow: 0 20px 50px rgba(0,0,0,0.3);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.2);
    }
    .header-glow {
      background: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
      padding: 2rem;
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    .header-glow::before {
      content: '';
      position: absolute;
      top: -50%; left: -50%;
      width: 200%; height: 200%;
      background: rgba(255,255,255,0.1);
      transform: rotate(30deg);
      pointer-events: none;
    }
    .btn-glow {
      transition: all 0.4s ease;
      position: relative;
      overflow: hidden;
      font-weight: 600;
      border: none;
      border-radius: 12px;
      padding: 12px 28px;
    }
    .btn-glow:hover {
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 20px 40px rgba(0,0,0,0.3) !important;
    }
    .btn-glow::after {
      content: '';
      position: absolute;
      top: 50%; left: 50%;
      width: 5px; height: 5px;
      background: rgba(255,255,255,0.5);
      opacity: 0;
      border-radius: 100%;
      transform: scale(1) translate(-50%, -50%);
      transition: all 0.6s;
    }
    .btn-glow:active::after {
      width: 300px; height: 300px;
      opacity: 1;
      transition: 0s;
    }
    .table {
      background: rgba(255,255,255,0.1);
      backdrop-filter: blur(10px);
    }
    .table th {
      background: linear-gradient(45deg, #667eea, #764ba2);
      color: white;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.9rem;
      letter-spacing: 1px;
    }
    .badge-gender {
      font-size: 0.9rem;
      padding: 8px 16px;
      border-radius: 50px;
      font-weight: 600;
    }
    .badge-male { background: #74b9ff; }
    .badge-female { background: #fd79a8; }
    .search-card {
      background: rgba(255,255,255,0.15);
      backdrop-filter: blur(12px);
      border-radius: 20px;
      border: 1px solid rgba(255,255,255,0.2);
    }
    .form-control, .form-select {
      background: rgba(255,255,255,0.1) !important;
      border: 1px solid rgba(255,255,255,0.3) !important;
      color: white !important;
      border-radius: 12px !important;
    }
    .form-control::placeholder { color: rgba(255,255,255,0.7); }
  </style>
</head>
<body>

  <div class="container py-5">
    <!-- WELCOME -->
    <div class="text-center mb-5">
      <h1 class="welcome-text animate__animated animate__fadeIn">
        Welcome, <%= username %>!
      </h1>
    </div>

    <!-- MAIN CARD -->
    <div class="card card-main bg-dark bg-opacity-90 text-white">

      <!-- GLOW HEADER -->
      <div class="header-glow text-white">
        <h2 class="mb-0 fw-bold display-5">Student Directory</h2>
      </div>

      <div class="card-body p-5">

        <!-- SEARCH BAR -->
        <div class="search-card p-4 mb-5">
          <form action="/students" method="GET" class="row g-3 align-items-end">
            <div class="col-lg-3 col-md-6">
              <label class="form-label text-white fw-bold">Name</label>
              <input type="text" name="name" class="form-control form-control-lg" 
                     placeholder="Search name..." value="<%= query.name || '' %>">
            </div>
            <div class="col-lg-3 col-md-6">
              <label class="form-label text-white fw-bold">Major</label>
              <input type="text" name="major" class="form-control form-control-lg" 
                     placeholder="e.g. Computer Science" value="<%= query.major || '' %>">
            </div>
            <div class="col-lg-2 col-md-4">
              <label class="form-label text-white fw-bold">Gender</label>
              <select name="gender" class="form-select form-select-lg">
                <option value="">All Gender</option>
                <option value="Male" <%= query.gender === 'Male' ? 'selected' : '' %>>Male</option>
                <option value="Female" <%= query.gender === 'Female' ? 'selected' : '' %>>Female</option>
              </select>
            </div>
            <div class="col-lg-2 col-md-4">
              <label class="form-label text-white fw-bold">Min Age</label>
              <input type="number" name="minAge" class="form-control form-control-lg" 
                     placeholder="17" value="<%= query.minAge || '' %>">
            </div>
            <div class="col-lg-2 col-md-4">
              <label class="form-label text-white fw-bold">Max Age</label>
              <input type="number" name="maxAge" class="form-control form-control-lg" 
                     placeholder="100" value="<%= query.maxAge || '' %>">
            </div>
            <div class="col-lg-12 d-flex gap-3 justify-content-center mt-4">
              <button type="submit" class="btn btn-primary btn-lg px-5 btn-glow shadow-lg">
                Search
              </button>
              <a href="/students" class="btn btn-warning btn-lg px-5 btn-glow shadow-lg text-dark fw-bold">
                All Students
              </a>
            </div>
          </form>
        </div>

        <!-- ACTION BUTTONS -->
        <div class="text-end mb-4">
          <a href="/students/new" class="btn btn-success btn-lg px-5 btn-glow shadow-lg">
            Add New Student
          </a>
          <a href="/logout" class="btn btn-outline-light btn-lg px-4 btn-glow ms-3">
            Logout
          </a>
        </div>

        <!-- TABLE -->
        <div class="table-responsive rounded-4 overflow-hidden">
          <table class="table table-hover align-middle mb-0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Student ID</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Major</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (students.length === 0) { %>
                <tr>
                  <td colspan="6" class="text-center py-5">
                    <h3 class="text-white-50">No students found</h3>
                    <a href="/students/new" class="btn btn-success btn-lg mt-3 btn-glow">Add First Student</a>
                  </td>
                </tr>
              <% } else { %>
                <% students.forEach(student => { %>
                  <tr>
                    <td class="fw-bold"><%= student.name %></td>
                    <td><%= student.studentId %></td>
                    <td><span class="badge bg-info fs-6"><%= student.age %></span></td>
                    <td>
                      <span class="badge badge-gender <%= student.gender === 'Male' ? 'badge-male' : 'badge-female' %>">
                        <%= student.gender %>
                      </span>
                    </td>
                    <td><%= student.major %></td>
                    <td class="text-center">
                      <a href="/students/<%= student._id %>/edit" class="btn btn-warning btn-sm btn-glow">Edit</a>
                      <form action="/students/<%= student._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm btn-glow" 
                                onclick="return confirm('Delete <%= student.name %>?')">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-footer text-center bg-black bg-opacity-30 py-4">
        <small class="text-white-50">COMPS381F • Group 4 • November 2025</small>
      </div>
    </div>
  </div>

  <!-- Cookie Banner -->
  <div id="cookieBanner" class="position-fixed bottom-0 start-50 translate-middle-x bg-primary text-white p-4 rounded-4 shadow-lg" style="display:none; z-index:9999; max-width:500px;">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
      <div><strong>We use cookies</strong><br><small>For secure login & better experience</small></div>
      <button onclick="localStorage.setItem('cookieConsent','accepted');this.parentElement.parentElement.style.display='none'" 
              class="btn btn-light btn-sm fw-bold">Accept</button>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    if (!localStorage.getItem('cookieConsent')) {
      setTimeout(() => document.getElementById('cookieBanner').style.display = 'block', 1000);
    }
  </script>
</body>
</html>
