<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>





<!-- Cookie Consent Banner â€” NO EXTRA PACKAGE NEEDED -->
<div id="cookieBanner" style="display:none; position:fixed; bottom:20px; left:50%; transform:translateX(-50%); 
     background:#1e40af; color:white; padding:16px 24px; border-radius:16px; box-shadow:0 10px 30px rgba(0,0,0,0.3); 
     z-index:9999; max-width:420px; width:calc(100% - 40px); text-align:center; font-family:system-ui;">
  <div style="display:flex; align-items:center; justify-content:space-between; flex-wrap:wrap; gap:12px;">
    <div style="text-align:left;">
      We use cookies<br>
      <small style="opacity:0.9;">For secure login and session management</small>
    </div>
    <div>
      <button onclick="acceptCookies()" class="btn btn-light btn-sm">Accept</button>
      <button onclick="declineCookies()" class="btn btn-outline-light btn-sm ms-2">Decline</button>
    </div>
  </div>
</div>

<script>
  // Show banner only if user hasn't decided
  if (!localStorage.getItem('cookieConsent')) {
    document.getElementById('cookieBanner').style.display = 'block';
  }
  function acceptCookies() {
    localStorage.setItem('cookieConsent', 'accepted');
    document.getElementById('cookieBanner').style.display = 'none';
  }
  function declineCookies() {
    localStorage.setItem('cookieConsent', 'declined');
    document.getElementById('cookieBanner').style.display = 'none';
  }
</script>






<body class="bg-light">
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Welcome, <%= username %>!</h1>
      <a href="/logout" class="btn btn-outline-danger">Logout</a>
    </div>

    <a href="/students/new" class="btn btn-success mb-3">Create New Student</a>

    <!-- Search Form (NOW SAFE) -->
    <form action="/students" method="get" class="row g-2 mb-4">
      <div class="col-md-3">
        <input type="text" name="name" placeholder="Name" 
               value="<%= query && query.name ? query.name : '' %>" class="form-control">
      </div>
      <div class="col-md-3">
        <input type="text" name="major" placeholder="Major" 
               value="<%= query && query.major ? query.major : '' %>" class="form-control">
      </div>
      <div class="col-md-2">
        <input type="number" name="minAge" placeholder="Min Age" 
               value="<%= query && query.minAge ? query.minAge : '' %>" class="form-control">
      </div>
      <div class="col-md-2">
        <input type="number" name="maxAge" placeholder="Max Age" 
               value="<%= query && query.maxAge ? query.maxAge : '' %>" class="form-control">
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Search</button>
      </div>
    </form>

    <table class="table table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Student ID</th>
          <th>Age</th>
          <th>Major</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (students.length === 0) { %>
          <tr><td colspan="5" class="text-center text-muted">No students found</td></tr>
        <% } else { %>
          <% students.forEach(s => { %>
            <tr>
              <td><%= s.name %></td>
              <td><%= s.studentId %></td>
              <td><%= s.age %></td>
              <td><%= s.major %></td>
              <td>
                <a href="/students/<%= s._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                <form action="/students/<%= s._id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-danger" 
                          onclick="return confirm('Delete <%= s.name %>?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>

