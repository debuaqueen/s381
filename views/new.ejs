<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Add New Student</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', sans-serif;
    }
    .glass-card {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(15px);
      border-radius: 24px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
    }
    .header-glow {
      background: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
      border-radius: 24px 24px 0 0;
      padding: 2rem;
    }
    .form-control, .form-select {
      background: rgba(255, 255, 255, 0.1) !important;
      border: 1px solid rgba(255, 255, 255, 0.3) !important;
      color: white !important;
      border-radius: 16px !important;
      padding: 14px !important;
      font-size: 1.1rem;
    }
    .form-control::placeholder {
      color: rgba(255, 255, 255, 0.7) !important;
    }
    .form-label {
      color: white;
      font-weight: 600;
      font-size: 1.1rem;
    }
    .btn-glow {
      transition: all 0.4s ease;
      font-weight: 600;
      border-radius: 16px;
      padding: 14px 32px;
      font-size: 1.1rem;
      position: relative;
      overflow: hidden;
    }
    .btn-glow:hover {
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4) !important;
    }
    .btn-glow:active::after {
      content: '';
      position: absolute;
      top: 50%; left: 50%;
      width: 300px; height: 300px;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      transform: translate(-50%, -50%) scale(0);
      animation: ripple 0.6s ease-out;
    }
    @keyframes ripple {
      to { transform: translate(-50%, -50%) scale(4); opacity: 0; }
    }
    .text-glow {
      background: linear-gradient(90deg, #ff9a9e 0%, #fad0c4 99%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      font-weight: 800;
    }
  </style>
</head>
<body class="text-white">

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">

        <!-- MAIN CARD -->
        <div class="glass-card">

          <!-- GLOW HEADER -->
          <div class="header-glow text-center">
            <h1 class="display-4 mb-0 text-glow">Add New Student</h1>
          </div>

          <div class="card-body p-5">

            <!-- ERROR MESSAGE -->
            <% if (typeof error !== 'undefined' && error) { %>
              <div class="alert alert-danger bg-danger bg-opacity-20 border-danger text-white border rounded-4 mb-4">
                <strong>Error:</strong> <%= error %>
              </div>
            <% } %>

            <form action="/students" method="POST">

              <!-- FULL NAME -->
              <div class="mb-4">
                <label class="form-label">Full Name <span class="text-danger">*</span></label>
                <input type="text" name="name" class="form-control form-control-lg" 
                       placeholder="e.g. Chan Tai Man" required minlength="2" maxlength="50">
                <small class="text-white-50">Must be 2–50 characters</small>
              </div>

              <!-- STUDENT ID -->
              <div class="mb-4">
                <label class="form-label">Student ID <span class="text-danger">*</span></label>
                <input type="text" name="studentId" class="form-control form-control-lg" 
                       placeholder="e.g. 21012345" required pattern="[0-9]{8,10}">
                <small class="text-white-50">Must be 8–10 digits only</small>
              </div>

              <!-- GENDER -->
              <div class="mb-4">
                <label class="form-label">Gender <span class="text-danger">*</span></label>
                <select name="gender" class="form-select form-control-lg" required>
                  <option value="" disabled selected>Select gender</option>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                </select>
              </div>

              <!-- AGE -->
              <div class="mb-4">
                <label class="form-label">Age <span class="text-danger">*</span></label>
                <input type="number" name="age" class="form-control form-control-lg" 
                       placeholder="18" required min="17" max="100">
                <small class="text-white-50">Must be 17 or older</small>
              </div>

              <!-- MAJOR -->
              <div class="mb-4">
                <label class="form-label">Major / Programme <span class="text-danger">*</span></label>
                <select name="major" class="form-select form-control-lg" required>
                  <option value="" disabled selected>Select your major</option>
                  <option>Computer Science</option>
                  <option>Information Technology</option>
                  <option>Business Administration</option>
                  <option>Engineering</option>
                  <option>Nursing</option>
                  <option>Design</option>
                  <option>Psychology</option>
                  <option>Other</option>
                </select>
              </div>

              <!-- BUTTONS -->
              <div class="d-flex justify-content-end gap-4 mt-5">
                <a href="/students" class="btn btn-outline-light btn-lg px-5 btn-glow">
                  Cancel
                </a>
                <button type="submit" class="btn btn-success btn-lg px-6 btn-glow shadow-lg">
                  Create Student
                </button>
              </div>
            </form>
          </div>

          <div class="text-center py-4 text-white-50 small">
            All data is securely stored
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- COOKIE BANNER -->
  <div id="cookieBanner" class="position-fixed bottom-0 start-50 translate-middle-x bg-primary text-white p-4 rounded-4 shadow-lg" 
       style="display:none; z-index:9999; max-width:500px;">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
      <div><strong>We use cookies</strong><br><small>For secure login & better experience</small></div>
      <button onclick="localStorage.setItem('cookieConsent','accepted');this.parentElement.parentElement.style.display='none'" 
              class="btn btn-light btn-sm fw-bold">Accept</button>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    if (!localStorage.getItem('cookieConsent')) {
      setTimeout(() => document.getElementById('cookieBanner').style.display = 'block', 800);
    }
  </script>
</body>
</html>
