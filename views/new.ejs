<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Add New Student</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', sans-serif;
    }
    .glass-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-radius: 28px;
      border: none;
      box-shadow: 0 25px 60px rgba(0, 0, 0, 0.25);
      overflow: hidden;
    }
    .header-glow {
      background: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
      padding: 2.5rem;
      text-align: center;
    }
    .text-glow {
      background: linear-gradient(90deg, #667eea, #764ba2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      font-weight: 900;
      font-size: 2.8rem;
    }
    .form-label {
      color: #333 !important;
      font-weight: 600;
      font-size: 1.1rem;
    }
    .form-control, .form-select {
      background: white !important;
      border: 2px solid #e0e0e0 !important;
      color: #333 !important;
      border-radius: 16px !important;
      padding: 16px !important;
      font-size: 1.1rem;
      box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }
    .form-control:focus, .form-select:focus {
      border-color: #667eea !important;
      box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25) !important;
    }
    /* FIXED: Major & Gender dropdowns now SOLID WHITE */
    .form-select {
      background-color: white !important;
      color: #333 !important;
    }
    .form-select option {
      background: white;
      color: #333;
    }
    .btn-glow {
      transition: all 0.4s ease;
      font-weight: 600;
      border-radius: 16px;
      padding: 14px 32px;
      font-size: 1.1rem;
      position: relative;
      overflow: hidden;
    }
    .btn-glow:hover {
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3) !important;
    }
    .btn-success {
      background: linear-gradient(45deg, #11998e, #38ef7d);
      border: none;
    }
    .btn-outline-light {
      border-color: #ddd;
      color: #333;
    }
    small {
      color: #666 !important;
    }
    .footer-text {
      color: #777;
    }
  </style>
</head>
<body>

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">

        <!-- BRIGHT & CLEAN CARD -->
        <div class="glass-card">

          <!-- GLOWING HEADER -->
          <div class="header-glow">
            <h1 class="text-glow">Add New Student</h1>
          </div>

          <div class="card-body p-5">

            <!-- ERROR -->
            <% if (typeof error !== 'undefined' && error) { %>
              <div class="alert alert-danger rounded-4 border-0 mb-4">
                <strong>Error:</strong> <%= error %>
              </div>
            <% } %>

            <form action="/students" method="POST">

              <div class="mb-4">
                <label class="form-label">Full Name <span class="text-danger">*</span></label>
                <input type="text" name="name" class="form-control form-control-lg"
                       placeholder="e.g. Chan Tai Man" required minlength="2" maxlength="50">
                <small>Must be 2–50 characters</small>
              </div>

              <div class="mb-4">
                <label class="form-label">Student ID <span class="text-danger">*</span></label>
                <input type="text" name="studentId" class="form-control form-control-lg"
                       placeholder="e.g. 21012345" required pattern="[0-9]{8,10}">
                <small>Must be 8–10 digits only</small>
              </div>

              <div class="mb-4">
                <label class="form-label">Gender <span class="text-danger">*</span></label>
                <select name="gender" class="form-select form-control-lg" required>
                  <option value="" disabled selected>Select gender</option>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                </select>
              </div>

              <div class="mb-4">
                <label class="form-label">Age <span class="text-danger">*</span></label>
                <input type="number" name="age" class="form-control form-control-lg"
                       placeholder="18" required min="17" max="100">
                <small>Must be 17 or older</small>
              </div>

              <div class="mb-4">
                <label class="form-label">Major / Programme <span class="text-danger">*</span></label>
                <select name="major" class="form-select form-control-lg" required>
                  <option value="" disabled selected>Select your major</option>
                  <option>Computer Science</option>
                  <option>Information Technology</option>
                  <option>Business Administration</option>
                  <option>Engineering</option>
                  <option>Nursing</option>
                  <option>Design</option>
                  <option>Psychology</option>
                  <option>Other</option>
                </select>
              </div>

              <div class="d-flex justify-content-end gap-4 mt-5">
                <a href="/students" class="btn btn-outline-secondary btn-lg px-5 btn-glow">
                  Cancel
                </a>
                <button type="submit" class="btn btn-success btn-lg px-6 btn-glow shadow-lg">
                  Create Student
                </button>
              </div>
            </form>
          </div>

          <div class="text-center py-4 footer-text small">
            All data is securely stored
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Cookie Banner -->
  <div id="cookieBanner" class="position-fixed bottom-0 start-50 translate-middle-x bg-primary text-white p-4 rounded-4 shadow-lg"
       style="display:none; z-index:9999; max-width:500px;">
    <div class="d-flex justify-content-between align-items-center gap-3">
      <div><strong>We use cookies</strong><br><small>For secure login & better experience</small></div>
      <button onclick="localStorage.setItem('cookieConsent','accepted');this.parentElement.parentElement.style.display='none'"
              class="btn btn-light btn-sm fw-bold">Accept</button>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    if (!localStorage.getItem('cookieConsent')) {
      setTimeout(() => document.getElementById('cookieBanner').style.display = 'block', 800);
    }
  </script>
</body>
</html>
