<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Student</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <style>
    body {
      background: #f8f9fa;
      position: relative;
      min-height: 100vh;
      margin: 0;
    }
    .card { border-radius: 16px; }
  </style>
</head>
<body>

  <div class="container mt-5 pb-5">
    <div class="row justify-content-center">
      <div class="col-md-7 col-lg-6">

        <div class="card shadow-lg border-0">
          <div class="card-header bg-warning text-dark text-center py-4">
            <h3 class="mb-0 fw-bold">Edit Student</h3>
          </div>

          <div class="card-body p-5">

            <!-- ERROR MESSAGE -->
            <% if (typeof error !== 'undefined' && error) { %>
              <div class="alert alert-danger alert-dismissible fade show">
                <strong>Error:</strong> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% } %>

            <form action="/students/<%= student._id %>?_method=PUT" method="POST">

              <!-- FULL NAME -->
              <div class="mb-4">
                <label class="form-label fw-bold">Full Name <span class="text-danger">*</span></label>
                <input type="text" name="name" value="<%= student.name %>" 
                       class="form-control form-control-lg" required minlength="2" maxlength="50">
                <small class="text-muted">Must be 2–50 characters</small>
              </div>

              <!-- STUDENT ID -->
              <div class="mb-4">
                <label class="form-label fw-bold">Student ID <span class="text-danger">*</span></label>
                <input type="text" name="studentId" value="<%= student.studentId %>" 
                       class="form-control form-control-lg" required pattern="[0-9]{8,10}">
                <small class="text-muted">Must be 8–10 digits only</small>
              </div>

              <!-- GENDER - FIXED & SAFE -->
              <div class="mb-4">
                <label class="form-label fw-bold">Gender <span class="text-danger">*</span></label>
                <select name="gender" class="form-select form-control-lg" required>
                  <option value="Male" <%= student.gender === 'Male' ? 'selected' : '' %>>Male</option>
                  <option value="Female" <%= student.gender === 'Female' ? 'selected' : '' %>>Female</option>
                </select>
              </div>

              <!-- AGE -->
              <div class="mb-4">
                <label class="form-label fw-bold">Age <span class="text-danger">*</span></label>
                <input type="number" name="age" value="<%= student.age %>" 
                       class="form-control form-control-lg" required min="17" max="100">
                <small class="text-muted">Must be 17 or older</small>
              </div>

              <!-- MAJOR - NOW A SELECT LIST (NOT TEXT INPUT!) -->
              <div class="mb-4">
                <label class="form-label fw-bold">Major / Programme <span class="text-danger">*</span></label>
                <select name="major" class="form-select form-control-lg" required>
                  <option value="Computer Science" <%= student.major === 'Computer Science' ? 'selected' : '' %>>Computer Science</option>
                  <option value="Information Technology" <%= student.major === 'Information Technology' ? 'selected' : '' %>>Information Technology</option>
                  <option value="Business Administration" <%= student.major === 'Business Administration' ? 'selected' : '' %>>Business Administration</option>
                  <option value="Engineering" <%= student.major === 'Engineering' ? 'selected' : '' %>>Engineering</option>
                  <option value="Nursing" <%= student.major === 'Nursing' ? 'selected' : '' %>>Nursing</option>
                  <option value="Design" <%= student.major === 'Design' ? 'selected' : '' %>>Design</option>
                  <option value="Psychology" <%= student.major === 'Psychology' ? 'selected' : '' %>>Psychology</option>
                  <option value="Other" <%= student.major === 'Other' ? 'selected' : '' %>>Other</option>
                </select>
              </div>

              <!-- BUTTONS -->
              <div class="d-flex justify-content-end gap-3 mt-5">
                <a href="/students" class="btn btn-secondary btn-lg px-4">Cancel</a>
                <button type="submit" class="btn btn-warning btn-lg px-5 fw-bold">Update Student</button>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- COOKIE BANNER -->
  <div id="cookieBanner" style="display:none; position:fixed; bottom:20px; left:50%; transform:translateX(-50%);
       background:#1e40af; color:white; padding:20px 28px; border-radius:16px; box-shadow:0 15px 40px rgba(0,0,0,0.5);
       z-index:9999; max-width:520px; width:calc(100% - 40px); font-family:system-ui,sans-serif;">
    <div style="display:flex; align-items:center; justify-content:space-between; flex-wrap:wrap; gap:15px; font-size:15px;">
      <div><strong>We use cookies</strong><br><small>For secure login</small></div>
      <div>
        <button onclick="localStorage.setItem('cookieConsent','accepted');document.getElementById('cookieBanner').style.display='none'"
                class="btn btn-light btn-sm fw-bold">Accept</button>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    if (!localStorage.getItem('cookieConsent')) {
      document.getElementById('cookieBanner').style.display = 'block';
    }
  </script>
</body>
</html>
